<!DOCTYPE html>
<html lang="uk">
<head>
  <meta charset="UTF-8">
  <title><%= typeof title !== 'undefined' ? title : 'Пункт управління' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <% if (typeof extraStyles !== 'undefined') { %>
    <% extraStyles.forEach(function(href) { %>
      <link rel="stylesheet" href="<%= href %>">
    <% }) %>
  <% } %>

  <style>
    body {
      margin: 0;
      background-color: #f8f9fa;
    }
    .main {
      padding: 30px;
      max-width: 1000px;
      margin: 0 auto;
    }
  </style>
</head>
<body>
  <div class="main">
    <%- body %>
  </div>
</body>
</html>
